   "source": [
    "Write a recursive function to count the no of digits of a number"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 15,
   "id": "dadd874e",
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "1"
      ]
     },
     "execution_count": 15,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "def count(num):\n",
    "    if num<10:\n",
    "        return 1\n",
    "    return 1+ count(num//10)\n",
    "\n",
    "count(0)"
   ]
